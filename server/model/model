const mongoose=require('mongoose')

var userSchema = mongoose.Schema({
    email:{
        type: String,
        required: true,
        unique: true
    },
    pass:{
        type: String,
        required: true
    },
    isAdmin : { 
        type: String
     },
    totalAmount :{
        type: Number},
    address :{
        type:String
    }    

})

const Users = mongoose.model('users',userSchema);
module.exports=Users